<% content_for :title do %>
<%=@title%>
<% end %>

	<h2><%=@title%></h2>
	

	<div class = 'large-6 columns'>
	<%= simple_form_for @truck do |f| %>
			<%= f.input :licnum, label: 'License #' %>
	  	<%= f.input :nickname, label: 'Nickname', placeholder: 'Optional'%>
			<%= f.collection_select :trailer_id, Trailer.all, :id, :nickname, label: "trailer_id" %>
			<%= f.button :submit, class: 'button small' %>
	<% end %>
	</div>
